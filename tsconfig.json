{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "noImplicitAny": true,
    "inlineSources": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "jsx": "react",
    "importHelpers": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  }
}
